<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content jcr:primaryType="nt:unstructured">
        <sidepanels jcr:primaryType="nt:unstructured">
            <easymarkup
                granite:class="js-SidePanel-content js-SidePanel-content--easymarkup"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        margin="{Boolean}true"
                        maximized="{Boolean}true"
                        orientation="vertical"
                        size="L">
                        <items jcr:primaryType="nt:unstructured">
                            <htmlTab
                                granite:class="sidepanel-tab sidepanel-tab-content"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Easy Markup - HTML"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    headerTitle="Easy Markup - HTML"/>
                                <parentConfig
                                    jcr:primaryType="nt:unstructured"
                                    icon="code"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        granite:class="sidepanel-tab-title"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Easy Markup - HTML"/>
                                    <contentPanel
                                        granite:class="content-panel pos-l-0-imp margin-b-0-5-imp height-80p js-markup-html"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                        </items>
                                    </contentPanel>
                                    <apply
                                        granite:class="js-markup-html-applybtn"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        type="button"
                                        text="Apply HTML"
                                        variant="primary"/>
                                </items>
                            </htmlTab>
                            <cssTab
                                granite:class="sidepanel-tab sidepanel-tab-content"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Easy Markup - CSS"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    headerTitle="Easy Markup - CSS"/>
                                <parentConfig
                                    jcr:primaryType="nt:unstructured"
                                    icon="brush"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        granite:class="sidepanel-tab-title"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Easy Markup - CSS"/>
                                    <contentPanel
                                        granite:class="content-panel pos-l-0-imp margin-b-0-5-imp height-80p js-markup-css"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                        </items>
                                    </contentPanel>
                                    <apply
                                        granite:class="js-markup-css-applybtn"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        type="button"
                                        text="Apply CSS"
                                        variant="primary"/>
                                </items>
                            </cssTab>
                            <jsTab
                                granite:class="sidepanel-tab sidepanel-tab-content"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Easy Markup - JS"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    headerTitle="Easy Markup - JS"/>
                                <parentConfig
                                    jcr:primaryType="nt:unstructured"
                                    icon="brackets"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        granite:class="sidepanel-tab-title"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Easy Markup - JS"/>
                                    <contentPanel
                                        granite:class="content-panel pos-l-0-imp margin-b-0-5-imp height-80p js-markup-javascript"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                        </items>
                                    </contentPanel>
                                    <apply
                                        granite:class="js-markup-javascript-applybtn"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/button"
                                        type="button"
                                        text="Apply JS"
                                        variant="primary"/>
                                </items>
                            </jsTab>
                        </items>
                    </tabs>
                </items>
            </easymarkup>
        </sidepanels>
    </jcr:content>
</jcr:root>
